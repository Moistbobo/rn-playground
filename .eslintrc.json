{
  "env": {
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb", "@react-native-community"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "globals": {
    "window": true,
    "fetch": false
  },
  "rules": {
    "react/jsx-filename-extension": [1, {"extensions": [".jsx", ".tsx"]}],
    "import/extensions": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
      },
      "typescript": {}
    }
  }
}
